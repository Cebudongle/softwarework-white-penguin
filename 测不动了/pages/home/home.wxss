/* pages/home/home.wxss */
page{
    font-size: small;
}
swiper{
    width: 100%;
    height: calc(100vw * 352 / 676);
}
image{
    width: 100%;
}
.first_tab{
    position: relative;
    width: 100vw;
    height: 23vh;
    display: flex;
    overflow: hidden;
    border-bottom: 1px solid #dedede;
}
.article{
    flex:9;
    display: flex;
    flex-direction: column;
}
button{
    width: 750rpx;
}
.title{
    flex: 1;
    display: -webkit-box;
    word-break:break-all;
    text-overflow:ellipsis;
    overflow:hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:2;
}
.brief{
    flex: 1;
    display: -webkit-box;
    word-break:break-all;
    text-overflow:ellipsis;
    overflow:hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:3;
}
.collect{
    flex:1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}