<!-- 搜索框 开始 -->
<view class="pyg_home">
<searchinput></searchinput>
</view>
<!-- 搜索框 结束 -->
<!--轮播图 开始-->
<swiper autoplay interval="2500" indicator-dots indicator-color="#0094ff" indicator-active-color="#ff0094" circular>
    <swiper-item
    wx:for="{{swiperList}}"
    wx:key="id"
    >
    <navigator url="/pages/item/item">
    <image mode="widthFix" src="{{item.src}}" />
    </navigator>
    </swiper-item>
</swiper>
<!-- 轮播图 结束 -->
<!-- 热门文章推送开始 -->
<view 
    wx:for="{{articleList}}"
    wx:key="id"
    data-index="{{index}}"
    bindtap="gotoURL"
class="first_tab">
<view class="tr_writeBox"></view>
<!-- 上方文章信息 -->
<view class="titlebox">
    <view class="title">{{item.blogTitle}}</view>
    <button class="collect" catchtap="sendLike" data-index="{{index}}">
    <image  mode="widthFix" src="/images/heart.png"></image>
    </button>
</view>
<!-- 下方文章信息 -->
<view class="tr_platformBox">
            <view class="tr_platform">csdn</view>
            <view class="tr_click">点击量：{{item.id}}</view>
        </view>
<view class="tr_writeBox"></view>
</view>