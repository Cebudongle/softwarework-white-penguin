  }
  /* 文章点击量 */
  .point_Num{
    position: relative;
    top: 175rpx;
    left: 225rpx;
    float: left;
  }
  /* 心形 */
  .like{
    position: relative;
    float: left;
    top: 165rpx;
    left: 375rpx;
    width: 50rpx;
    height: 50rpx;
  }
  /* 心形图片 */
  .like_Image{
      width: 100%;
